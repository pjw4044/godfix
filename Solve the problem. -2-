#include <stdio.h>

void 다국어인사(int lang,int cnt) {
  if(lang ==3){
  for( int i =1;i< cnt;i++){
  printf("곤니찌와\n\n");
  } 
  }if(lang ==2){
    for(int i=0;i<cnt;i++){
   printf("하이\n\n");
   }
   }if(lang ==1){
   for(int i=0;i<cnt;i++){
   printf("안녕하세요\n\n");
   }
   }
  
   
}
int main(void) {
  
  // 다국어인사에 매개변수로 1을 넘기면 안녕하세요. 2를 넘기면 하이!, 3을 넘기면 곤니찌와
  // 다국어인사에 매개변수로 인사의 횟수와 언어를 넘겨서 해당 횟수만큼 해당 언어로 인사하게 해주세요.

  다국어인사(3, 3); // 곤니찌와 3번 출력
  다국어인사(1, 5); // 안녕하세요 5번 출력
  다국어인사(2, 1); // 하이 1번 출력
  return 0;
}
